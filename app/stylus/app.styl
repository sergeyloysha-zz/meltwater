font-base = brown-regular, Helvetica, Arial, sans-serif
font-bold = brown-bold
font-regular = brown-regular

size-font = 1.4rem
size-line = 2rem

size-s = 768px
size-m = 980px
size-l = 1200px

color-white = #ffffff
color-main = #4c4d4f

mediaMin(minWidth)
  @media screen and (min-width: minWidth)
    {block}
mediaBetween(minWidth, maxWidth)
  @media screen and (min-width: minWidth) and (max-width: maxWidth)
    {block}

clearfix()
  zoom 1
  &:after
  &:before
    content ""
    display table
  &:after
    clear both

*
  &
  &:before
  &:after
    box-sizing border-box
  &:active
    -webkit-tap-highlight-color: alpha(color-white, 0)

::selection
  background alpha(#28bbbb, 0.05)

input
textarea
  &:focus
    outline 0

html
  font-size 62.5%
  text-rendering optimizeLegibility
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  background color-white

body
  font size-font/size-line font-base
  color color-main

strong
  font-family font-bold

img
  max-width 100%
  height auto

a
a:link
a:active
a:visited
  text-decoration none
  cursor pointer

.owl-carousel
  display none
  position relative
  width 100%
  -ms-touch-action pan-y

  .owl-wrapper
    display none
    position relative
    transform translate3d(0px, 0px, 0px)

    &:after
      content "."
      display block
      clear both
      visibility hidden
      line-height 0
      height 0

  .owl-wrapper-outer
    position relative
    width 100%

    &.autoHeight
      transition height 500ms ease-in-out

  .owl-item
    float left

.owl-controls .owl-page,
.owl-controls .owl-buttons div
  cursor pointer

.owl-controls
  user-select none
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)

.grabbing
  cursor url(grabbing.png) 8 8, move

.owl-carousel  .owl-wrapper,
.owl-carousel  .owl-item
  -webkit-backface-visibility hidden
  -moz-backface-visibility hidden
  -ms-backface-visibility hidden
  -webkit-transform translate3d(0,0,0)
  -moz-transform translate3d(0,0,0)
  -ms-transform translate3d(0,0,0)



.case-studies-hero
  position relative
  border-bottom 1px solid #949494
  background color-white

  .owl-buttons
    position absolute
    z-index 4
    top 50%
    left 50%
    width 950px
    height 50px
    transform translate(-50%,-50%)
    pointer-events none

  .owl-next
  .owl-prev
    position absolute
    top 0
    display block
    width 11px
    height 50px
    pointer-events auto
    opacity .8
    transition opacity .15s

    &:hover
      opacity 1

  .owl-prev
    left -10rem
    background-image url('data:image/svg+xml;base64,')
    background-repeat no-repeat
    background-position 50%
    background-size contain

  .owl-next
    right -10rem
    background-image url('data:image/svg+xml;base64,')
    background-repeat no-repeat
    background-position 50%
    background-size contain

  &__list
    margin 0
    padding 0
    list-style none

  &__item
    position relative

  &__slide
    position relative
    clearfix()
    width 100%
    max-width 950px
    margin 0 auto
    padding 5rem 0

    +mediaMin(size-m)
      height 35rem

    &-left
    &-right
      width 100%
      padding 0 1.5rem

      +mediaMin(size-m)
        width 50%
        float left

    &-head
      font-family brown-regular
      font-size 2rem
      line-height 2.8rem
      margin 0
      color #4c4d4f

    &-title
      font-family brown-bold
      font-size 3.4rem
      line-height 4.8rem
      margin 0
      color #4c4d4f

    &-text
      font-family brown-light
      font-size 2rem
      line-height 2.8rem
      color #4c4d4f
      margin 0 0 1.5rem 0

    &-link
      position relative
      display inline-block
      font-family brown-regular
      font-size 2rem
      line-height 2.8rem
      color #28bbbb

      &:after
        position relative
        content 'â€º'
        left .5rem
        transition left .15s

      &:hover:after
        left .8rem

@keyframes heroScreenAnimation {
  0% {
    opacity: 0;
    -webkit-transform: translate3d(0, 0, -25px);
            transform: translate3d(0, 0, -25px);
  }
}

.screens
  display none
  perspective 5000px
  transform-style preserve-3d

  +mediaMin(size-m)
    display block

  &__isometric
    position relative
    top 0
    left 0
    transform-style preserve-3d
    transition all 0.3s ease

    &:nth-of-type(1)
      transform translate3d(0, 0, 0) rotate3d(1, 1, 0, 45deg) scale(1.5)

  &__rotate
    position relative
    transform rotate3d(0, 0, -1, 20deg) scale(1)
    transform-style preserve-3d

  &__screen
    display none
    position absolute
    box-shadow 0 0 100px rgba(0, 0, 0, 0.25)

    &:nth-of-type(1)
      left 0
      bottom -5%
      transform translate3d(0, 0, 25px)
      box-shadow 0 0 100px rgba(0, 0, 0, 0.25)

    &:nth-of-type(2)
      visibility hidden
      left 110%
      bottom -15%
      opacity .5

      +mediaMin(size-l)
        visibility visible

    &:nth-of-type(3)
      top -100%
      opacity .5

    &:nth-of-type(4)
      position relative
      visibility hidden

.owl-item.active
  .screens__screen
    display block

    &:nth-of-type(1)
      animation heroScreenAnimation 1s ease 0.4s both

    &:nth-of-type(2)
      animation heroScreenAnimation 1s ease 0.2s both

    &:nth-of-type(3)
      animation heroScreenAnimation 1s ease 0s both
